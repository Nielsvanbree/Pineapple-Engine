{
  "compilerOptions": {
    "target": "es2020", 
    "module": "commonjs", 
    "declaration": true,
    "sourceMap": true, 
    "outDir": "./dist", 
    "strict": true, 
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}